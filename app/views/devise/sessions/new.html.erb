<div class="container-fluid d-flex align-items-center justify-content-center ">
  <div class="row w-100 shadow-lg rounded-4 overflow-hidden">

    <!-- Left Section (Welcome Message) -->
    <div class="col-lg-6 col-md-6 col-12 text-center pt-5 welcome-section" id="logo-text-wrapper">
      <h1 class="title fw-bold">Log In</h1>
    </div>

    <div class="col-lg-6 col-md-6 col-12 p-5 d-flex flex-column justify-content-center">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs min-width-320">

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>

        <div class="checkbox-container">
          <%= f.input :remember_me, as: :boolean, input_html: { class: "custom-checkbox", id: "remember-me" } if devise_mapping.rememberable? %>
        </div>
      </div>

        <%= f.button :submit, "Log in", class: "btn btn-Primary w-100" %>

      <%= render "devise/shared/links" %>

    <% end %>
    </div>
  </div>
</div>
