<div class="apparel-body">
  <div class="logo-div"><img src="/assets/Logo-main.png" alt="My Logo" class="logo">
  </div>
<div class ="title"><h1>Log In</h1></div>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">

    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>

    <div class="checkbox-container">
      <%= f.input :remember_me, as: :boolean, input_html: { class: "custom-checkbox", id: "remember-me" } if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>

  <%= render "devise/shared/links" %>

<% end %>
