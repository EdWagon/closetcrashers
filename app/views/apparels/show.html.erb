<h1>Apparels#index</h1>

<h2><%= @apparel.name %></h2>
<p><%= @apparel.description %></p>
<% if @apparel.color %>
  <p><%= @apparel.color.name %></p>
<% end %>
<p><%= @apparel.price %></p>
<p><%= @apparel.address %></p>
<%= link_to 'book it', new_apparel_booking_path(@apparel) %>


<% @apparel.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
