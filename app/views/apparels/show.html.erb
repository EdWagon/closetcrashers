<div class="apparel-body">
  <div class="logo-div"><img src="/assets/Logo-main.png" alt="My Logo" class="logo">
  </div>
<div class ="title"><h1>Welcome to Closet Crashers</h1></div>



    <div class="container mt-5">
      <div class="row">
        <!-- Product Images Section -->
        <div class="col-md-6">
            <div class="apparel-img">
                <img src="/assets/apparel-example.png" alt="apparel image" class="apparel-image">
            </div>
          <% if @apparel.photos.any? %>
            <% random_photo = @apparel.photos.sample %>
            <div class="main-image">
              <%= cl_image_tag random_photo.key, id: "main-product-image", class: "img-fluid rounded shadow-sm", height: 500, width: 500, crop: :fill %>
            </div>

            <!-- Thumbnail Images -->
            <div class="thumbnails mt-3">
              <% @apparel.photos.each do |photo| %>
                <%= cl_image_tag photo.key, class: "thumbnail img-thumbnail mx-1", height: 80, width: 80, crop: :fill, onclick: "changeMainImage(this)" %>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Product Details Section -->
        <div class="col-md-6">
          <h1 class="product-title fw-bold"><%= @apparel.name %></h1>
          <p class="text-muted"><%= @apparel.description %></p>

          <% if @apparel.color %>
            <p><strong>Color:</strong> <span class="badge bg-secondary"><%= @apparel.color.name %></span></p>
          <% end %>

          <p class="price h4 text-primary fw-bold">$<%= @apparel.price %></p>

          <p><strong>Location:</strong> <%= @apparel.address %></p>

          <div class="btn-Primary">
            Add to Cart
          </div>
        </div>
      </div>
    </div>
</div>


<!-- JavaScript to Change Main Image -->
<script>
  function changeMainImage(element) {
    document.getElementById("main-product-image").src = element.src;
  }
</script>
