<h1>Apparels#index</h1>

<h2><%= @apparel.name %></h2>
<p><%= @apparel.description %></p>
<% if @apparel.color %>
  <p><%= @apparel.color.name %></p>
<% end %>
<p><%= @apparel.price %></p>
<p><%= @apparel.address %></p>


<% @apparel.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
